<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="30sp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="50sp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/res"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="num1"
        android:textSize="20sp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/str1"
        android:padding="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sym"
        android:textSize="20sp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/sym"
        android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="num2"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/str2"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="50dp"
        android:id="@+id/one"
        android:layout_margin="15dp" />



    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="50dp"
        android:id="@+id/two"
        android:padding="5dp"
        android:layout_margin="15dp"

        />
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="50dp"
            android:id="@+id/three"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="50dp"
            android:id="@+id/add"
            android:layout_margin="15dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="50dp"
            android:id="@+id/four"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="50dp"
            android:id="@+id/five"
            android:padding="5dp"
            android:layout_margin="15dp"

            />
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="50dp"
            android:id="@+id/six"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="50dp"
            android:id="@+id/sub"
            android:padding="5dp"
            android:layout_margin="15dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="50dp"
            android:id="@+id/seven"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="50dp"
            android:id="@+id/eight"
            android:padding="5dp"
            android:layout_margin="15dp"

            />
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="50dp"
            android:id="@+id/nine"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50dp"
            android:id="@+id/mul"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:id="@+id/zero"
            android:layout_margin="15dp"

            />

        <Button
            android:id="@+id/clearline"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="C"
            android:textSize="50dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="50dp"
            android:id="@+id/clear1"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50dp"
            android:id="@+id/div"
            android:padding="5dp"
            android:layout_margin="15dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="CE"
            android:textSize="50dp"
            android:id="@+id/allclr"
            android:layout_margin="15dp"

            />
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="50dp"
            android:id="@+id/equal"
            android:layout_margin="15dp"

            />

    </LinearLayout>

</LinearLayout>